<h1>New Ad</h1>

<%= form_for :creative, :html => { :multipart => true }, url: creatives_path do |f| %>
    <%= hidden_field_tag :creator_email, current_user.email %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.file_field :image %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>