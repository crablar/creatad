<h1>New Link</h1>

<%= form_for :creative, :html => { :multipart => true }, url: creatives_path do |f| %>
    <%= hidden_field_tag :creator_email, current_user.email %>
    <p>
      <%= f.label :link %><br>
      <%= f.text_field :link %>
    </p>

    <p>
      <%= f.file_field :image %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>